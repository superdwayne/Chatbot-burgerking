{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/build/**/*",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "src/build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/(.*)", "dest": "/src/build/$1" }
  ]
}
